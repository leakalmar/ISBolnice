<UserControl x:Class="Hospital_IS.DoctorView.UCNewApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Hospital_IS.DoctorView" mc:Ignorable="d"
        d:DesignHeight="555" d:DesignWidth="783">
    <Grid KeyDown="back_KeyDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Content="Novi termin" FontSize="20" BorderThickness="0"
                Foreground="FloralWhite" HorizontalAlignment="Center" Grid.ColumnSpan="3"
                FontWeight="Bold" VerticalAlignment="Center" />

        <Label Content="Doktor:" Foreground="FloralWhite" Grid.Column="1"
                VerticalAlignment="Center" Grid.Row="1" FontSize="14" />
        <Label Content="Soba:" Foreground="FloralWhite" Grid.Column="1"
                VerticalAlignment="Center" Grid.Row="2" FontSize="14" />
        <Label Content="Tip:" Foreground="FloralWhite" Grid.Column="1"
                VerticalAlignment="Center" Grid.Row="3" FontSize="14" />
        <Label Content="Trajanje(h):" Foreground="FloralWhite" Grid.Column="1"
                VerticalAlignment="Center" Grid.Row="4" FontSize="14" />
        <ComboBox x:Name="doctors" ItemsSource="{Binding}" Grid.Row="1" Grid.Column="2"
                Height="24.62" HorizontalAlignment="Stretch" FontSize="14"
                VerticalAlignment="Center" Padding="1" SelectionChanged="filter_changed"
                Margin="0,0,100,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{} {0} {1}">
                                <Binding Path="Name" />
                                <Binding Path="Surname" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox x:Name="rooms" ItemsSource="{Binding}" Grid.Row="2" Grid.Column="2"
                Height="24.62" HorizontalAlignment="Stretch" FontSize="14"
                VerticalAlignment="Center" Padding="1" SelectionChanged="filter_changed"
                Margin="0,0,100,0">>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding RoomId}" Padding="0" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox x:Name="types" ItemsSource="{Binding}" Grid.Row="3" Grid.Column="2"
                Height="24.62" HorizontalAlignment="Stretch" FontSize="14"
                VerticalAlignment="Center" Padding="1" SelectionChanged="filter_changed"
                Margin="0,0,100,0">>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding RoomId}" Padding="0" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox x:Name="duration" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center"
                FontSize="14" Margin="0,0,100,0"
                PreviewTextInput="duration_PreviewTextInput"/>

        <Calendar Name="calendar" SelectionMode="MultipleRange" Grid.Column="0"
                Grid.RowSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center"
                Grid.Row="1" SelectedDatesChanged="filter_changed" />

        <GroupBox Header="Rezultati pretrage" FontSize="16" Grid.Row="5"
                Grid.ColumnSpan="3" BorderBrush="#FF2E3B55" Foreground="White"
                Grid.RowSpan="2" Margin="0,0,0,20">
            <DataGrid x:Name="medicines" ItemsSource="{Binding}" Margin="10"
                    Background="Transparent" RowBackground="Transparent"
                    Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Auto"
                    BorderThickness="0,0,0,0" AutoGenerateColumns="False"
                    SelectionMode="Single" IsReadOnly="True" BorderBrush="{x:Null}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    HorizontalScrollBarVisibility="Disabled" FontSize="14"
                    RowHeaderWidth="0" CanUserSortColumns="False"
                    MouseDoubleClick="medicines_MouseDoubleClick"
                    PreviewKeyDown="addMedicine_KeyDown">
                <DataGrid.Resources>
                    <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}"
                            TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#FF2E3B55" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naziv leka" Binding="{Binding Key.Name}"
                            CanUserResize="False" Width="0.05*" SortDirection="Ascending" />
                    <DataGridTextColumn Header="Sastav"
                            Binding="{Binding Key.Composition}" CanUserResize="False"
                            Width="0.05*" />
                    <DataGridCheckBoxColumn Header="Dodato"
                            Binding="{Binding Value,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                            x:Name="isAdded" CanUserResize="False" Width="0.05*" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

    </Grid>
</UserControl>
