<UserControl x:Class="Hospital_IS.DoctorView.UCNewApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Hospital_IS.DoctorView" mc:Ignorable="d"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" d:DesignHeight="555"
        d:DesignWidth="783">
    <UserControl.Resources>
        <local:RedConverter x:Key="RedConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid x:Name="schedule" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition Width="0.09*" />
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button Grid.Column="3" Grid.Row="4" Background="Transparent"
                    BorderThickness="0" x:Name="emergency" Click="emergency_Click"
                    Margin="5">
                <Image Source="pack://application:,,,/Resources/siren.png" />
            </Button>

            <Label Content="Novi termin" FontSize="20" BorderThickness="0"
                    Foreground="FloralWhite" HorizontalAlignment="Center"
                    Grid.ColumnSpan="5" FontWeight="Bold" VerticalAlignment="Center" />
            <Label Content="Specijalizacija:" Foreground="FloralWhite" Grid.Column="1"
                    VerticalAlignment="Center" Grid.Row="1" FontSize="14"
                    x:Name="lblSpecialization" />
            <Label Content="Doktor:" Foreground="FloralWhite" Grid.Column="1"
                    VerticalAlignment="Center" Grid.Row="2" FontSize="14" />
            <Label Content="Soba:" Foreground="FloralWhite" Grid.Column="1"
                    VerticalAlignment="Center" Grid.Row="3" FontSize="14" x:Name="lblRoom" />
            <Label Content="Tip:" Foreground="FloralWhite" Grid.Column="1"
                    VerticalAlignment="Center" Grid.Row="4" FontSize="14" x:Name="lblType" />
            <Label Content="Trajanje(h):" Foreground="FloralWhite" Grid.Column="4"
                    VerticalAlignment="Center" Grid.Row="4" FontSize="14"
                    x:Name="lblDuration" />

            <ComboBox x:Name="types" Grid.Row="4" Grid.Column="2" Height="24.62"
                    HorizontalAlignment="Stretch" FontSize="14" VerticalAlignment="Center"
                    Padding="1" SelectionChanged="types_SelectionChanged"
                    Margin="0,0,15,0">
                <ComboBoxItem Content="Pregled" />
                <ComboBoxItem Content="Operacija" />
            </ComboBox>
            
            <ComboBox x:Name="doctors" ItemsSource="{Binding}" Grid.Row="2"
                    Grid.Column="2" Height="24.62" HorizontalAlignment="Stretch"
                    FontSize="14" Grid.ColumnSpan="4" Margin="0,0,20,0"
                    VerticalAlignment="Center" Padding="1"
                    SelectionChanged="filter_changed">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{} {0} {1}">
                                    <Binding Path="Name" />
                                    <Binding Path="Surname" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox x:Name="specialization" Grid.Row="1" Grid.Column="2" Height="24.62"
                    HorizontalAlignment="Stretch" FontSize="14" VerticalAlignment="Center"
                    Padding="1" SelectionChanged="specialization_SelectionChanged"
                    Margin="0,0,20,0" Grid.ColumnSpan="4">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox x:Name="rooms" ItemsSource="{Binding}" Grid.Row="3" Grid.Column="2"
                    Height="24.62" HorizontalAlignment="Stretch" FontSize="14"
                    VerticalAlignment="Center" Padding="1"
                    SelectionChanged="filter_changed" Grid.ColumnSpan="4"
                    Margin="0,0,20,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding RoomId}" Padding="0" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Calendar Name="calendar" SelectionMode="MultipleRange" Grid.Column="0"
                    Grid.RowSpan="4" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Grid.Row="1"
                    SelectedDatesChanged="filter_changed" />
            <local:TimeSpanUpDown x:Name="duration" Grid.Row="4" Grid.Column="5"
                    VerticalAlignment="Center" FontSize="14" Margin="0,0,20,0"
                    ValueChanged="duration_ValueChanged" />

            <GroupBox Header="Rezultati pretrage" FontSize="16" Grid.Row="5"
                    Grid.ColumnSpan="6" BorderBrush="#FF2E3B55" Foreground="White"
                    Grid.RowSpan="2" Margin="0,0,0,20" x:Name="appointmentsGroupBox"
                    Visibility="Visible">
                <DataGrid x:Name="appointments" ItemsSource="{Binding}" Margin="10"
                        Background="Transparent" RowBackground="Transparent"
                        Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Auto"
                        BorderThickness="0,0,0,0" AutoGenerateColumns="False"
                        SelectionMode="Single" IsReadOnly="True" BorderBrush="{x:Null}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        HorizontalScrollBarVisibility="Disabled" FontSize="14"
                        RowHeaderWidth="0">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}"
                                TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#FF2E3B55" />
                            <EventSetter Event="KeyDown" Handler="setAppointment_KeyDown" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Datum"
                                Binding="{Binding Appointment.AppointmentEnd.Date,StringFormat=\{0:MM/dd/yyyy\}}"
                                Width="0.05*" SortDirection="Ascending" />
                        <DataGridTextColumn Header="Od" CanUserResize="False"
                                Width="0.05*"
                                Binding="{Binding Appointment.AppointmentStart.TimeOfDay}" />
                        <DataGridTextColumn Header="Do" x:Name="to" Width="0.05*"
                                Binding="{Binding Appointment.AppointmentEnd.TimeOfDay}" />
                        <DataGridTextColumn Header="Tip" Width="0.05*"
                                Binding="{Binding Appointment.Type}" />
                        <DataGridCheckBoxColumn Header="Zauzeto" x:Name="isAdded"
                                Width="0.05*" Binding="{Binding Appointment.Reserved}" />
                        <DataGridCheckBoxColumn Header="Hitno" Width="0.05*"
                                Binding="{Binding Appointment.IsUrgent}" />
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}"
                                BasedOn="{StaticResource {x:Type DataGridRow}}">
                            <Setter Property="IsEnabled" Value="True" />
                            <EventSetter Event="MouseDoubleClick"
                                    Handler="appointments_MouseDoubleClick" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition
                                                Binding="{Binding Appointment.Reserved}"
                                                Value="True" />
                                        <Condition Binding="{Binding Enabled}"
                                                Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <MultiDataTrigger.Setters>
                                        <Setter Property="IsEnabled" Value="False" />
                                    </MultiDataTrigger.Setters>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </GroupBox>

            <GroupBox Header="Rezultati pretrage" FontSize="16" Grid.Row="5"
                    Grid.ColumnSpan="6" BorderBrush="#FF2E3B55" Foreground="White"
                    Grid.RowSpan="2" Margin="0,0,0,20" x:Name="emergencyGroupBox"
                    Visibility="Collapsed">
                <DataGrid x:Name="emergencyAppointments" ItemsSource="{Binding}"
                        Margin="10" Background="Transparent" RowBackground="Transparent"
                        Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Auto"
                        BorderThickness="0,0,0,0" AutoGenerateColumns="False"
                        SelectionMode="Single" IsReadOnly="True" BorderBrush="{x:Null}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        HorizontalScrollBarVisibility="Disabled" FontSize="14"
                        RowHeaderWidth="0">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}"
                                TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#FF2E3B55" />
                            <EventSetter Event="KeyDown" Handler="setAppointment_KeyDown" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Datum"
                                Binding="{Binding SuggestedAppointment.AppointmentEnd.Date,StringFormat=\{0:MM/dd/yyyy\}}"
                                SortDirection="Ascending" />
                        <DataGridTextColumn Header="Od" CanUserResize="False"
                                Binding="{Binding SuggestedAppointment.AppointmentStart.TimeOfDay}" />
                        <DataGridTextColumn Header="Do"
                                Binding="{Binding SuggestedAppointment.AppointmentEnd.TimeOfDay}" />
                        <DataGridTextColumn Header="Doktor" x:Name="doctor"
                                SortMemberPath="Surname" Width="*">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="SuggestedAppointment.Doctor.Surname" />
                                    <Binding Path="SuggestedAppointment.Doctor.Name" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Broj pomeranja" x:Name="reschedule"
                                CanUserResize="False"
                                Binding="{Binding ConflictingAppointments.Count,StringFormat={}\{0:N0\}}" />
                        <DataGridCheckBoxColumn Header="Pomeranje hitnog slucaja"
                                Binding="{Binding ConflictingIsUrgent}" />
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <EventSetter Event="MouseDoubleClick"
                                    Handler="emergencyApp_MouseDoubleClick" />
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </GroupBox>

        </Grid>
    </Grid>

</UserControl>
