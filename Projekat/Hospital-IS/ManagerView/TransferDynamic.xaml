<Window x:Class="Hospital_IS.TransferDynamic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_IS"
        mc:Ignorable="d"
          AllowsTransparency="True"
      
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        Title="Transfer dinamicne opreme" Height="750" Width="430">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" >
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF184095" Offset="0.0"/>
            <GradientStop Color="#FF5B317E" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17"/>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="17"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="30" />
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>
        <Button x:Name="Back" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent" Foreground="White" Content="Nazad" FontSize="18" BorderBrush="White" Click="Back_Click"/>
        <TextBlock Text="Transfer opreme" Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="3"  FontSize="25" Foreground="White" TextAlignment="Center"/>
        <ComboBox x:Name="ComboSource"  Grid.Column="4"  Grid.Row="3"  ItemsSource="{Binding Path= SourceRoom}" DisplayMemberPath="RoomIdType"   HorizontalAlignment="Left" Width="120" Height="22"  SelectionChanged="ComboSource_SelectionChanged" Grid.ColumnSpan="3" />

        <DataGrid x:Name="DataGridSource"  Grid.Row="6" Grid.RowSpan="2" Grid.Column="3" Grid.ColumnSpan="3" IsReadOnly="True" ItemsSource="{Binding Path= SourceEquip}" AlternatingRowBackground="NavajoWhite"  
                  Background="#FFC5DBDF" Focusable="True" AutoGenerateColumns="False"  SelectionMode="Single">
            <DataGrid.CellStyle>
                <Style/>
            </DataGrid.CellStyle>
            <DataGrid.ColumnHeaderStyle>
                <Style/>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Effect>
                <DropShadowEffect/>
            </DataGrid.Effect>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv" Width="100" Binding = "{Binding Name}"/>
                <DataGridTextColumn Header="Kolicina" Width="100" Binding="{Binding Quantity}"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Grid.Row="9" Grid.Column="1" Text="Unesite kolicinu za transfer:" Grid.ColumnSpan="5" Foreground="White" FontSize="15" TextAlignment="Center" VerticalAlignment="Center" Margin="22,0,83,0"/>
        <TextBox x:Name="QuantityBox" Grid.Row="9" Grid.Column="5" Height="25" FontSize="15" Grid.ColumnSpan="2" Margin="2,7,10,7" />
        <Button x:Name="Transfer" Grid.Row="11" Grid.Column="3" Grid.ColumnSpan="3" Height="30" Width="150" Background="Transparent" BorderBrush="White" Foreground="White" FontSize="20" Content="Transfer" Click="Transfer_Click"/>
    </Grid>
</Window>
