<Window x:Class="Hospital_IS.SecretaryView.ScheduleAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_IS.SecretaryView"
        mc:Ignorable="d"
        Title="Zakazivanje termina" Height="600" Width="620"
        WindowStartupLocation="CenterScreen"
        FontSize="18"
        FontWeight="Light"
        Background="#CCC5CFE5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Column="1" Grid.Row="2" Text="Tip pregleda:" Margin="50 20 50 10"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Text="Pacijent:" Margin="50 10"/>
        <TextBlock Grid.Column="1" Grid.Row="4" Text="Doktor:" Margin="50 10"/>
        <TextBlock Grid.Column="1" Grid.Row="5" Text="Soba:" Margin="50 10"/>
        <TextBlock Grid.Column="1" Grid.Row="6" Text="Datum pregleda:" Margin="50 10"/>
        <TextBlock Grid.Column="1" Grid.Row="7" Text="Početak pregleda:" Margin="50 10"/>
        <TextBlock Grid.Column="1" Grid.Row="8" Text="Kraj pregleda:" Margin="50 10"/>
        <TextBlock Grid.Column="1" Grid.Row="9" Text="Opis:" Margin="50 20"/>

        <ComboBox Name="cbAppType" Grid.Column="2" Grid.Row="2" Margin="50 20 50 10" LostFocus="cbAppType_LostFocus" FontSize="15">
            <ComboBoxItem Content="Pregled"/>
            <ComboBoxItem Content="Operacija"/>
        </ComboBox>
        <ComboBox Name="cbPatient" Grid.Column="2" Grid.Row="3" Margin="50 10" ItemsSource="{Binding Patients}" FontSize="15">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{} {0} {1}">
                                <Binding Path="Name"/>
                                <Binding Path="Surname"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox Name="cbDoctor" Grid.Column="2" Grid.Row="4" Margin="50 10" ItemsSource="{Binding Doctors}" FontSize="15">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{} {0} {1}">
                                <Binding Path="Name"/>
                                <Binding Path="Surname"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox Name="txtAppDate"  Grid.Column="2" Grid.Row="6" Margin="50 10"/>
        <TextBox Name="txtStartOfApp" Grid.Column="2" Grid.Row="7" Margin="50 10" LostFocus="txtStartOfApp_LostFocus"/>
        <TextBox Name="txtEndOfApp" Grid.Column="2" Grid.Row="8" Margin="50 10" LostFocus="txtEndOfApp_LostFocus"/>
        <ComboBox Name="cbRoom" Grid.Column="2" Grid.Row="5" Margin="50 10" ItemsSource="{Binding Rooms}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <Binding Path="RoomId"/>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <TextBox Grid.Column="2" Grid.Row="9" Height="80" Margin="50 20"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Text="{Binding DocAppointment.AppointmentCause}"/>

        <Button Name="btnConfirm" Grid.Column="1" Grid.Row="12" Width="120" Height="30"
                Content="Potvrdi" Click="NewAppointment"/>
        <Button Grid.Column="2" Grid.Row="12" Width="120" Height="30"
                Content="Odustani" Click="Close"/>

        <Button Name="btnEmergency" Content="Hitan pregled?" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                Width="130" HorizontalAlignment="Right" Margin="0 20 50 0" Click="btnEmergency_Click"/>
    </Grid>
</Window>
